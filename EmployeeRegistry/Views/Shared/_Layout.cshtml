<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Registry Tracking System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!--BEGIN - Employee Registry (ER) Tracking System Header Graphic -->
    <center>
        <img src="~/Content/Images/ER_Header.png" alt="Employee Registry Tracking System Header Graphic" />
    </center>
    <!-- END - ER Header Graphic  -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Displays Application name [Employee Registry Tracking System] title text above header graphic on page-->
                @Html.ActionLink("Employee Registry Tracking System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <!--<div class="container-body-content">-->
    <!-- BEGIN BODY CONTAINER CODE -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Employee Registry Tracking System</p>
        </footer>
        <!--BEGIN - Footer Graphic -->
        <img src="~/Content/Images/Footer.png" />
        <!--END -  Footer Graphic-->
        <!--</div>-->
        <!-- END BODY CONTAINER CODE -->
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
